# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /about                      controllers.Application.about
GET     /contact                    controllers.Application.contact
GET     /hello/:name                controllers.Application.hello(name)
GET			/stage											controllers.Application.stage

POST    /authenticate   						controllers.Application.authenticate
GET     /signup        							controllers.Application.signup
POST    /users/create   						controllers.Application.createNewUser
GET     /logout         						controllers.Application.logout

GET     /chat                       controllers.Chat.index
GET     /chat/:roomId               controllers.Chat.room(roomId:Long)
POST    /chat/create                controllers.Chat.create
GET     /chat/establish/:roomId/:timestamp     controllers.Chat.establish(roomId:Long, timestamp:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
