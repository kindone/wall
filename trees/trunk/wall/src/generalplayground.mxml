<s:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009" 
					   xmlns:s="library://ns.adobe.com/flex/spark" 
					   xmlns:mx="library://ns.adobe.com/flex/mx">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			
		
			private function test(e:Event):void {
				var rect:Rectangle = container.scrollRect;
				if(!rect)
					rect = new Rectangle(0, 0, container.width, container.height);
				//rect.x ++;
				rect.width--;
				container.scrollRect = rect;
			}
			
		]]>
	</fx:Script>
	<s:initialize>
		<![CDATA[
		
			
			//timer.addEventListener
			
		]]>
	</s:initialize>
	<s:creationComplete>
		<![CDATA[
			this.addEventListener(Event.ENTER_FRAME, test);
		
			trace(container.parentDocument.hasOwnProperty("widths"), container.parent);
		]]>
	</s:creationComplete>
	
	<s:BorderContainer backgroundColor="0" id="obj" x="-10000" z="30000"/>
	
	<s:Group id="container" width="400" height="300">
		<s:BorderContainer x="300" y="20" width="20" height="20"/>		
	</s:Group>	
	
	
</s:WindowedApplication>
